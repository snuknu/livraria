<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
	
	<lifecycle>
		<phase-listener>livraria.util.LogPhaseListener</phase-listener>
		<phase-listener>livraria.util.Autorizador</phase-listener>
		<phase-listener>livraria.util.ConnectionPhaseListener</phase-listener>
	</lifecycle>
	
	<navigation-rule>
	    <from-view-id>autor.xhtml</from-view-id>
	    <navigation-case>
	        <from-outcome>autor</from-outcome>
	        <to-view-id>livro.xhtml</to-view-id>
	        <redirect />
	    </navigation-case>
	</navigation-rule>

</faces-config>